<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textOnPrimary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="textOnSecondary">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="textOnPrimary.textH0" parent="textOnPrimary">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="textOnPrimary.textH1" parent="textOnPrimary">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="textOnPrimary.textH2" parent="textOnPrimary">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textOnPrimary.textH3" parent="textOnPrimary">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textOnPrimary.textH4" parent="textOnPrimary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textOnSecondary.textH1" parent="textOnSecondary">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="textOnSecondary.textH2" parent="textOnSecondary">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textOnSecondary.textH3" parent="textOnSecondary">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textOnSecondary.textH4" parent="textOnSecondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?attr/colorPrimaryButtonText</item>
    </style>
    <style name="buttonTransparent" parent="textOnSecondary.textH4">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?attr/colorTransparentButtonText</item>

    </style>
</resources>
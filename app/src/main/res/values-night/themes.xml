        <!-- Primary brand color. -->
        <item name="colorPrimary">
            @color/color_primary_night
        </item>
        <item name="colorPrimaryVariant">
            @color/color_primary_variant_night
        </item>
        <item name="colorOnPrimary">
            @color/color_on_primary_night
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/color_secondary_night
        </item>

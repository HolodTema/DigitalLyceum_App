<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/linear_rectangle_secondary_variant"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textSchoolName"
        style="@style/textOnSecondary.textH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="some school name"
        android:layout_marginHorizontal="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/textSchoolAddress"
        style="@style/textOnSecondary.textH4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="some school's address"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonPrimary"
        android:layout_marginTop="10dp"
        android:text="@string/choose"/>

</LinearLayout>